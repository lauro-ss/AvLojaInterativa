@model AvLojaInterativa.Models.FabricanteModel

<h4 class="text-uppercase">Fabricante e Categoria</h4>
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label text-uppercase"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do fabricante" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria_1" class="control-label text-uppercase"></label>
                <input asp-for="Categoria_1" class="form-control" placeholder="Digite o nome da categoria 1"/>
                <span asp-validation-for="Categoria_1" class="text-danger"></span>
           
                
                <input asp-for="Categoria_2" class="form-control mt-2" placeholder="Digite o nome da categoria 2" />
                <span asp-validation-for="Categoria_2" class="text-danger"></span>

                
                <input asp-for="Categoria_3" class="form-control mt-2" placeholder="Digite o nome da categoria 3" />
                <span asp-validation-for="Categoria_3" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
