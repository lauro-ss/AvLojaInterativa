@model AvLojaInterativa.Models.ProdutoModel

<h4 class="text-uppercase">Produtos</h4>

<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label text-uppercase"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFabricante" class="control-label text-uppercase"></label>
                <select class="form-control" name="IdFabricante" id="fabricante" onclick="getCategorias('@Url.Action("GetCategorias")')"  placeholder="Selecione o fabricante">
                    @if (ViewBag.listaFabricantes != null)
                    @foreach (var item in ViewBag.listaFabricantes)
                    {
                        <option value="@item.Id">@item.Nome</option>
                    }
                </select>
                <span asp-validation-for="IdFabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label text-uppercase"></label>
                <select class="form-control"  name="Categoria" id="ajaxBox" placeholder="Selecione a categoria">
                    
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label text-uppercase"></label>
                <input asp-for="Preco" class="form-control" placeholder="Digite o preço" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
